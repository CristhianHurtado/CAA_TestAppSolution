@model CAA_TestApp.Models.Product

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Inventories" asp-action="CreateProduct" id="createProductForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"><strong>Product Name</strong></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParLevel" class="control-label"><strong>Minimum stock level</strong></label>
                <input asp-for="ParLevel" class="form-control" min="0" />
                <span asp-validation-for="ParLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"><strong>Category</strong></label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
            </div>
            <div class="form-group">
                <label asp-for="OrganizeID" class="control-label"><strong>Organized by</strong></label>
                <select asp-for="OrganizeID" class ="form-control" asp-items="ViewBag.OrganizeID"></select>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" id="submitProductCreate" value="Add" class="btn btn-primary btn-style" />
            </div>
        </form>
    </div>
</div>

