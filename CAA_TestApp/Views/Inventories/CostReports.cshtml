@model IEnumerable<CAA_TestApp.ViewModels.CostReportsVM>

@{
    ViewData["Title"] = "Cost Reports";
}

<h1>Cost Report</h1>
<form asp-controller="Inventories" asp-action="CostReports" method="get">
    <a asp-action="DownloadCostReports" title=" Click here to download Cost Report" class="btn btn-info float-end btn-style">Download Cost Report</a>
    <div class="form-horizontal">
        <button class=" btn @(ViewData["Filtering"]) " type="button" data-bs-toggle="collapse" id="filterToggle" data-bs-target="#collapseFilter" 
              title=" Click here to filter or search records "  aria-expanded="false" aria-controls="collapseFilter" style="border-radius: 25px;">
            Filter/Search
        </button>
        <div class="collapse" id="collapseFilter">
            <div class="card card-body bg-light">
                <div class="row">
                    <div class="form-group col-md-4">
                        <label class="control-label">Search Item Name:</label>
                        @Html.TextBox("SearchName", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label">Filter by Branches: (Ctrl + Click to Select Multiple)</label>
                        @Html.ListBox("LocationID", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4 align-self-end" style="margin-top:5px;">
                        <input type="submit" title=" Click here to filter records" name="actionButton" value="Filter" class="btn btn-outline-primary btn-style" />
                        <a asp-action="CostReports" title=" Click here to clear filter" class="btn btn-outline-dark btn-style ">Clear</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.CostTotal)
                </th>



            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CostTotal)
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <partial name="_PagingNavBar" />
</form>